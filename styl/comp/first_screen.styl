.first_screen
	background-image url(../img/Ancient.jpg)
	background-size cover
	background-repeat no-repeat
	background-position center
	background-attachment fixed
	padding-top 3%
	padding-bottom 3%
	height 100%
	.container
		width 70%

	.jumbotron
		overflow hidden
		margin-bottom 1%
		background-color rgba(#fff,.92)
		box-shadow 0 0 5px rgba(#000, .3)
		padding 3%
		h1
			color brown_h1
			text-align center
			font-size 36px
			font-weight 900
			margin-top -1%
		h2
			font-size 24px
			text-align center
			color brown
		h3
			text-align center
			font-size 20px
			margin-bottom 20px
		img
			margin-right 20px
		p
			font-size 17px
		iframe
			display block
			width 60%
			min-height 315px
			margin 20px auto
	.col-md-6
		.img-thumbnail
			width 100%
			margin-top 7%
	.col-md-8
		margin-right 1%
		width 65.6%
		height 430.8px
		// max-height 379px
		padding 3% 5% 0.7%
		.date
			padding: 10px 5px;
			border-radius: 5px;
			border 1px solid
			font-size: 18px;

			span
				display inline-block
				border-bottom 1px dashed
				margin-bottom 10px
	.red_arrow_1,
	.red_arrow_2
		background-image url('../img/red_arrow.png')
		background-repeat no-repeat
	.red_arrow_1
		background-position 552px 205px
	.red_arrow_2
		background-position -56px 204px
		padding 3.6% 3%
	.row
		margin-bottom 1%

#pdf
	font-size: 20px;
	margin-top: -9px;
	color #91230d
	text-transform: capitalize

	
#with_geshe
	.col-md-8
		padding 0
		min-height auto
		min-height auto
		height auto
#geshe
	margin-top 5%
	margin-right 0
.form-control
	margin-bottom 10px
.form-group
	width 90%
	margin 0 auto
	h5
		color #91230d
	strong
		color #32CD32
	.politics,
	.politics + a
		display block 
		font-size: 11px !important;
		text-align: center;
		line-height: 1;
		margin-top: 10px;
.btn-danger
	width 100%