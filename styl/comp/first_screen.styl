.first_screen
	background-image url(../img/Ancient.jpg)
	background-size cover
	background-repeat no-repeat
	background-position center
	background-attachment fixed
	padding-top 3%
	padding-bottom 3%
	height 100%
	.container
		width 70%

	.jumbotron
		overflow hidden
		margin-bottom 1%
		background-color rgba(#fff,.92)
		box-shadow 0 0 5px rgba(#000, .3)
		padding 3%
		h1
			color brown_h1
			text-align center
			font-size 36px
			font-weight 900
			margin-top -1%
		h2
			font-size 24px
			text-align center
			color brown
		h3
			text-align center
			font-size 20px
			margin-bottom 20px
		img
			margin-right 20px
		p
			font-size 17px
		iframe
			display block
			width 60%
			min-height 315px
			margin 20px auto
	.col-md-6
		.img-thumbnail
			width 100%
			margin-top 7%
	.col-md-8
		display table
		margin-right 1%
		width 65.6%
		height 373px
		// max-height 379px
		padding 6.4% 5% 4.4%
