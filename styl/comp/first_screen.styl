.first_screen
	background-image url(../img/Ancient.jpg)
	background-size cover
	background-repeat no-repeat
	background-position center
	background-attachment fixed
	padding-bottom 3%
	.container
		padding-top 3%
		width 70%

	.jumbotron
		overflow hidden
		margin-bottom 1%
		background-color rgba(#fff,.92)
		box-shadow 0 0 5px rgba(#000, .3)
		padding 3%
		h1
			color brown_h1
			text-align center
			font-size 36px
			font-weight 900
			margin-top -1%
		h2
			font-size 24px
			text-align center
			color brown
		h3
			text-align center
			font-size 22px
			margin-bottom 20px
		img
			margin-right 20px
		p
			font-size 17px
		iframe
			display block
			width 60%
			min-height 315px
			margin 20px auto
	.col-md-8
		margin-right 1%
		width 65.6%
		max-height 329px
		min-height 329px
		padding 6.4% 5% 4.4%
		.row
			margin-bottom 2%

.form-control
	margin-bottom 10px
.form-group
	margin-bottom 0
	.politics,
	.politics + a
		display block 
		font-size: 11px !important;
		text-align: center;
		line-height: 1;
		margin-top: 10px;
.btn-danger
	width 100%
	


